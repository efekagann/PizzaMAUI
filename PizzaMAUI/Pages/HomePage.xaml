<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:PizzaMAUI.ViewModels"
             xmlns:models="clr-namespace:PizzaMAUI.Models"
             xmlns:services="clr-namespace:PizzaMAUI.Services"
             x:Class="PizzaMAUI.Pages.HomePage"
             Title="Kopernik Pizza"                      
             Padding="15"
             x:DataType="vm:HomeViewModel">


    <ScrollView>
        <VerticalStackLayout
            Spacing="10">
            <Border StrokeShape="RoundRectangle 10"
                    StrokeThickness="0"
                    BackgroundColor="Goldenrod"
                    VerticalOptions="Start"
                    Padding="15">
                
                <Grid ColumnDefinitions="*,150"
                      RowDefinitions="*,Auto">

                    <VerticalStackLayout Grid.Column="0"
                                         Grid.Row="0"
                                         Spacing="10">
                        <Label Text="En İyi Teklif"
                               Padding="3,1"
                               FontSize="25"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"/>
                        <Label Text="Bu inanılmaz teklifi süresi dolmadan yakalayın!" 
                               FontSize="15"
                               Padding="5"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    
                    <Button Text="Teklife Git"
                            Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="PaleGoldenrod"
                            TextColor="Black"
                            FontAttributes="Bold"
                            CornerRadius="22"
                            HorizontalOptions="Center"
                            Padding="50,0"/>

                    <Image Grid.RowSpan="2"
                           Grid.Column="1"
                           Source="pizza3img.png"
                           HeightRequest="150"                           
                           WidthRequest="150"></Image>
                    
                </Grid>
                
                
            </Border>

            <Border StrokeShape="RoundRectangle 22"
                    StrokeThickness="2"
                    Stroke="Goldenrod">
                <Label Text="Shearch here..."
                       TextColor="Goldenrod"
                       FontSize="15"
                       Padding="10,15"/>
            </Border>

            <BoxView HeightRequest="15"
                     Color="Transparent"/>

            <Grid ColumnDefinitions="*,*">
                <Label Grid.Column="0"
                       Text="Popular Items"
                       HorizontalOptions="Start"
                       VerticalOptions="Start"
                       FontSize="20"
                       FontAttributes="Bold"/>
                <Label Grid.Column="1"
                       Text="View all"
                       HorizontalOptions="End"
                       VerticalOptions="End"
                       TextDecorations="Underline"/>
            </Grid>


            <FlexLayout BindableLayout.ItemsSource="{Binding Pizzas}" Wrap="Wrap">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:Pizza">
                        <Border StrokeShape="RoundRectangle 10"
                    FlexLayout.Basis="50%"
                    StrokeThickness="0"
                    BackgroundColor="PaleGoldenrod"
                    Padding="0"
                    Margin="2">
                            <Grid RowDefinitions="150,Auto,Auto,Auto" RowSpacing="5">
                                <Image Grid.Row="0"
                           Source="Images/pizza1img.png"
                                    HeightRequest="150"
                                    WidthRequest="130"/>
                                    <Label Grid.Row="1"
                           Text="{Binding Name}"
                           HorizontalOptions="Center"
                           FontSize="20"/>
                                    <!-- Diğer öğeler buraya eklenebilir -->
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

